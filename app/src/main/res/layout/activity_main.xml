<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".OrderHistoryActivity" tools:ignore="MergeRootFrame"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:rowCount="5"
    android:columnCount="3"
    android:orientation="vertical">

    <!-- order history title -->
    <TextView android:id="@+id/title"
        android:text="@string/order_history"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_rowSpan="1"
        android:textColor="@color/order_history"
        android:layout_marginBottom="16dp"/>

    <!-- first column, order date -->
    <TextView android:id="@+id/ordered_on_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/ordered_on_title"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_column="0"/>

    <!-- ticket info column -->
    <TextView android:id="@+id/ticket_info_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/ticket_info_title"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_column="1"/>


</GridLayout>
